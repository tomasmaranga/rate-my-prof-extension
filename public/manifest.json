{
  "manifest_version": 3,
  "name": "Tufts SIS Rate My Professors Extension",
  "version": "1.0",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "description": "Easily access your professors' RMP stats on SIS",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["*://www.ratemyprofessors.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://sis.it.tufts.edu/psp/paprd/EMPLOYEE/EMPL/h/*"],
      "js": ["content.js"],
      "css": ["index.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon-48.png"
  },
  "options_ui": {
    "chrome_style": true,
    "open_in_tab": false
  }
}
